



Vagrant.configure("2") do |config|

  config.ssh.insert_key = false
  config.ssh.private_key_path = ["~/.ssh/id_rsa", "~/.vagrant.d/insecure_private_key"]


  config.vm.define "Leon-productie-01-lb" do |lb1_config|
      lb1_config.vm.box = "ubuntu/xenial64"
      lb1_config.vm.hostname = "Leon-productie-01-lb"
      lb1_config.vm.network "private_network", ip: "192.168.2.10" 
      lb1_config.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "~/.ssh/authorized_keys"
      lb1_config.vm.provider "virtualbox" do |vb|
        vb.name = "Leon-productie-01-loadbalancer"
        vb.gui = false
        vb.memory = "512"   
      end
  end

  (1..2).each do |i|
  config.vm.define "Leon-productie-01-webserver#{i}" do |web_config|
      web_config.vm.box = "ubuntu/xenial64"
      web_config.vm.hostname = "Leon-productie-01-webserver#{i}"
      web_config.vm.network "private_network", ip: "192.168.2.1#{i}" 
      web_config.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "~/.ssh/authorized_keys"
      web_config.vm.provider "virtualbox" do |vb|
        vb.name = "Leon-productie-01-webserver#{i}"
        vb.gui = false
        vb.memory = "512"   
      end
  end
end

  config.vm.define "Leon-productie-01-db" do |db_config|
      db_config.vm.box = "ubuntu/xenial64"
      db_config.vm.hostname = "Leon-productie-01-db"
      db_config.vm.network "private_network", ip: "192.168.2.20" 
      db_config.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "~/.ssh/authorized_keys"
      db_config.vm.provider "virtualbox" do |vb|
        vb.name = "Leon-productie-01-database"
        vb.gui = false
        vb.memory = "512"   
      end
  end
end
